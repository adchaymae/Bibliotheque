@model GLivreLM.Models.Livre;
@{
    ViewData["Title"] = "Livre - Modifier";
}


<h1>Livre - Modifier</h1>


<form method="post" asp-action="Modifier">
    <fieldset>
        <legend>Données Livre</legend>
        <div class="form-group row">
            <label for="Isbn" class="col-sm-2 col-form-label">ISBN</label>
            <div class="col-sm-10">
                <input asp-for="Isbn" readonly class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Titre" class="col-sm-2 col-form-label">Titre</label>
            <div class="col-sm-10">
                <input asp-for="Titre" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Auteur" class="col-sm-2 col-form-label">Auteur</label>
            <div class="col-sm-10">
                <input asp-for="Auteur" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label for="DateEdition" class="col-sm-2 col-form-label">Date Edition</label>
            <div class="col-sm-10">
                <input asp-for="DateEdition" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label for="Resume" class="col-sm-2 col-form-label">Resumé</label>
            <div class="col-sm-10">
                <input asp-for="Resume" class="form-control">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </fieldset>
</form>

